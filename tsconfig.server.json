{
  "extends": "./tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "rootDir": "."
    }
  },
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "rootDir": "server",
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false,
    "noEmitOnError": true
  },
  "include": ["server/**/*.ts"]
}
